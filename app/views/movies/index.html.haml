-#  This file is app/views/movies/index.html.haml
%h1 All Movies 
%h3{:class =>@title_header, :id => "title_header"}= link_to "Sort By Title", movies_path(:sort => "title", :ratings => params[:ratings])
%h3{:class =>@release_date_header, :id => "release_date_header"}= link_to "Sort By Release Date", movies_path(:sort => "release_date", :ratings => params[:ratings])
= form_tag movies_path, id: "ratings_form", :method => :get do
 Include:
 -@all_ratings.each do |rating|
  = rating
  = check_box_tag "ratings[#{rating}]",1, @all_selected_ratings.include?(rating), {:id => "ratings_#{rating}"}
 =submit_tag 'Refresh', :id => "ratings_submit"
%table#movies
 %thead
  %tr
   %th{:class =>@title_header, :id => "title_header"}= link_to "Movie Title", movies_path(:sort => "title", :ratings => params[:ratings])
   %th Rating
   %th{:class =>@release_date_header, :id => "release_date_header"}= link_to "Release Date", movies_path(:sort => "release_date", :ratings => params[:ratings])
   %th More Info
  %tbody
 - @movies.each do |movie|
  %tr
  %td= movie.title 
  %td= movie.rating
  %td= movie.release_date
  %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
